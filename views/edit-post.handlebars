<article class="edit-post">
  <a class="text-white" href="/dashboard"> &larr; Back to dashboard</a>
  <div class="mb-3">
    <h2>Edit Post </h2>
  </div>

  <form class="edit-post-form">
    <div class="mb-3">
      <input class="form-control" name="post-title" type="text" value="{{post.title}}" />
      <span>({{format_url post.post_url}})</span>
    </div>
    <div class="mb-3">
      <label class="form-label" for="post-text">Post Text</label>
      <textarea class="form-control" id="post-text" name="post-text"/>{{post.post_text}}</textarea>
    </div>
    <div class="mb-3">
      Created by you on {{format_date post.created_at}}
      |
      <a class="text-white" href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div class="mb-3">
      <button type="submit" class="btn btn-lg fw-bold border-white bg-white">Save post</button>
      <button type="button" class="delete-post-btn btn btn-lg fw-bold border-white bg-white">Delete post</button>
    </div>
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>